<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.diogo.com.imc.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/imc" />

        <TextView
            android:id="@+id/alturatexto_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Altura:"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/altura_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alturatexto_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/pesotexto_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textSize="24sp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/altura_id"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/peso_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/altura_id"
            android:layout_below="@+id/pesotexto_id"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bt_calcular_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/peso_id"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
